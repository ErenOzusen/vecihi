<% layout('layouts/boilerplate') %>

    <div class="SlaytAlaniKapsayicisi">
        <ul class="SlaytAlaniResimleri">
            <li class="SlaytResmi"><img src="/images/Slider-1-1.jpg" alt="" title=""></li>
            <li class="SlaytResmi"><img src="/images/Slider-1-2.jpg" alt="" title=""></li>
            <li class="SlaytResmi"><img src="/images/Slider-1-3.jpg" alt="" title=""></li>
            <li class="SlaytResmi"><img src="/images/Slider-1-4.jpg" alt="" title=""></li>
        </ul>
    </div>

    <div id="TamsayfajUrunlerAlani">
        <% if(anaSayfaUeruenlerDB) {%>
            <div id="TamsayfaYeniUrunlerBaslikAlani">
                <%=anaSayfaUeruenlerDB[0].sectionBirBaslik%>
            </div>
            <% } %>

                <% if(isAdmin) { %>
                    <form action="/admin/anaSayfaGuencelle" method="POST" id="formBoeluemBir">
                        <input type="hidden" name="section" value="Ana Sayfa Bölüm Bir">
                        <div class="güncelle">
                            <div class="">
                                <a href="#" onclick="submitAnaSayfaBoeluemBirForm()">
                                    <img src="/images/refresh.png" alt="" title="">
                                    Güncelle
                                </a>
                            </div>
                        </div>
                    </form>
                    <% } %>



                        <div id="TamsayfaYeniUrunlerDengelemeAlani">

                            <% if(anaSayfaUeruenlerSectionBir) { %>
                                <% for (let i=0; i < anaSayfaUeruenlerSectionBir.length; i +=6) { %>
                                    <div class="row">
                                        <% for (let j=i; j < i + 6 && j < anaSayfaUeruenlerSectionBir.length; j++) { %>
                                            <div id="TamsayfaYeniUrunBir" class="TamsayfaYeniUrunSinirlamaAlani">
                                                <div class="TamsayfaYeniUrunResmiDısCercevesi">
                                                    <a href="/<%=anaSayfaUeruenlerSectionBir[j].kategori%>/<%=anaSayfaUeruenlerSectionBir[j]._id%>/detay"
                                                        target=""><img
                                                            src="<%=anaSayfaUeruenlerSectionBir[j].images[0].url%>"
                                                            alt="" title=""></a>
                                                </div>
                                                <div class="TamsayfaYeniUrunUstBaslikMetni">
                                                    <a
                                                        href="/<%=anaSayfaUeruenlerSectionBir[j].kategori%>/<%=anaSayfaUeruenlerSectionBir[j]._id%>/detay">
                                                        <%=anaSayfaUeruenlerSectionBir[j].kategori%>
                                                    </a>
                                                </div>
                                                <div class="TamsayfaYeniUrunAltBaslikMetni">
                                                    <a
                                                        href="/<%=anaSayfaUeruenlerSectionBir[j].kategori%>/<%=anaSayfaUeruenlerSectionBir[j]._id%>/detay">
                                                        <%=anaSayfaUeruenlerSectionBir[j].cesit%>
                                                    </a>
                                                </div>
                                                <div class="TamsayfaYeniUrunPuanYildizlariAlani">
                                                    <a href="/ueruenDetay" target=""><img src="/images/star-3.png"
                                                            alt="" title=""></a>
                                                </div>
                                                <div class="TamsayfaYeniUrunFiyatlariAlani">
                                                    <span class="TamsayfaUzeriCiziliYeniUrunFiyati">
                                                        <a href="/ueruenDetay" target=""><del>800 TL</del></a>
                                                    </span>
                                                    <span class="TamsayfaYeniUrunFiyati">
                                                        <a href="/<%=anaSayfaUeruenlerSectionBir[j].kategori%>/<%=anaSayfaUeruenlerSectionBir[j]._id%>/detay"
                                                            target="">
                                                            <%=anaSayfaUeruenlerSectionBir[j].fiyat%> TL
                                                        </a>
                                                    </span>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                                        <% } %>
                        </div>
    </div>


    <div id="TamsayfaCoksatanUrunlerAlani">
        <div id="TamsayfaCoksatanUrunlerBaslikAlani">Çok Satan Ürünler</div>

        <% if(isAdmin) { %>
            <form action="/admin/anaSayfaGuencelle" method="POST" id="formBoeluemIki">
                <input type="hidden" name="section" value="Ana Sayfa Bölüm Iki">
                <div class="güncelle">
                    <div class="">
                        <a href="#" onclick="submitAnaSayfaBoeluemIkiForm()">
                            <img src="/images/refresh.png" alt="" title="">
                            Güncelle
                        </a>
                    </div>
                </div>
            </form>
            <% } %>


                <div id="TamsayfaCoksatanUrunlerDengelemeAlani">


                    <% if(anaSayfaUeruenlerSectionIki) { %>
                        <% for (let i=0; i < anaSayfaUeruenlerSectionIki.length; i +=6) { %>
                            <div class="row">
                                <% for (let j=i; j < i + 6 && j < anaSayfaUeruenlerSectionIki.length; j++) { %>
                                    <div id="TamsayfaYeniUrunBir" class="TamsayfaYeniUrunSinirlamaAlani">
                                        <div class="TamsayfaYeniUrunResmiDısCercevesi">
                                            <a href="/<%=anaSayfaUeruenlerSectionIki[j].kategori%>/<%=anaSayfaUeruenlerSectionIki[j]._id%>/detay"
                                                target=""><img src="<%=anaSayfaUeruenlerSectionIki[j].images[0].url%>"
                                                    alt="" title=""></a>
                                        </div>
                                        <div class="TamsayfaYeniUrunUstBaslikMetni">
                                            <a
                                                href="/<%=anaSayfaUeruenlerSectionIki[j].kategori%>/<%=anaSayfaUeruenlerSectionIki[j]._id%>/detay">
                                                <%=anaSayfaUeruenlerSectionIki[j].kategori%>
                                            </a>
                                        </div>
                                        <div class="TamsayfaYeniUrunAltBaslikMetni">
                                            <a
                                                href="/<%=anaSayfaUeruenlerSectionIki[j].kategori%>/<%=anaSayfaUeruenlerSectionIki[j]._id%>/detay">
                                                <%=anaSayfaUeruenlerSectionIki[j].cesit%>
                                            </a>
                                        </div>
                                        <div class="TamsayfaYeniUrunPuanYildizlariAlani">
                                            <a href="/ueruenDetay" target=""><img src="/images/star-3.png" alt=""
                                                    title=""></a>
                                        </div>
                                        <div class="TamsayfaYeniUrunFiyatlariAlani">
                                            <span class="TamsayfaUzeriCiziliYeniUrunFiyati">
                                                <a href="/ueruenDetay" target=""><del>800 TL</del></a>
                                            </span>
                                            <span class="TamsayfaYeniUrunFiyati">
                                                <a href="/<%=anaSayfaUeruenlerSectionIki[j].kategori%>/<%=anaSayfaUeruenlerSectionIki[j]._id%>/detay"
                                                    target="">
                                                    <%=anaSayfaUeruenlerSectionIki[j].fiyat%> TL
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
                                <% } %>






                </div>
    </div>



    <div id="TamsayfaDortluBannerAlani">
        <div id="TamsayfaDortluBannerDengelemeAlani">



            <div class="TamsayfaDortluBannerSinirlamaAlani">
                <div class="TamsayfaDortluBannerResmi">
                    <img src="/images/fast-delivery-index.png" alt="" title="">
                </div>
                <div class="TamsayfaDortluBannerBaslikMetni">
                    Hızlı Teslimat
                </div>
                <div class="TamsayfaDortluBannerIcerikMetni">
                    Siparişiniz maksimum 24 saat içerisinde kargoya verilir.
                </div>
            </div>


            <div class="TamsayfaDortluBannerSinirlamaAlani">
                <div class="TamsayfaDortluBannerResmi">
                    <img src="/images/click-index.png" alt="" title="">
                </div>
                <div class="TamsayfaDortluBannerBaslikMetni">
                    Tek Tıkla Güvenli Alışveriş
                </div>
                <div class="TamsayfaDortluBannerIcerikMetni">
                    Ödeme ve adres bilgilerinizi kaydedin, güvenli alışveriş yapın.
                </div>
            </div>


            <div class="TamsayfaDortluBannerSinirlamaAlani">
                <div class="TamsayfaDortluBannerResmi">
                    <img src="/images/devices-index.png" alt="" title="">
                </div>
                <div class="TamsayfaDortluBannerBaslikMetni">
                    Mobil Cebinizde
                </div>
                <div class="TamsayfaDortluBannerIcerikMetni">
                    Dilediğiniz her yerden güvenli alışverişin keyfini çıkarın.
                </div>
            </div>


            <div class="TamsayfaDortluBannerSinirlamaAlani">
                <div class="TamsayfaDortluBannerResmi">
                    <img src="/images/pay-back-index.png" alt="" title="">
                </div>
                <div class="TamsayfaDortluBannerBaslikMetni">
                    Kolay İade
                </div>
                <div class="TamsayfaDortluBannerIcerikMetni">
                    Aldığınız ürünü iade etmek çok kolay.
                </div>
            </div>


        </div>
    </div>

    <script>
        function submitAnaSayfaBoeluemBirForm() {
            document.getElementById('formBoeluemBir').submit();
        }

        function submitAnaSayfaBoeluemIkiForm() {
            document.getElementById('formBoeluemIki').submit();
        }
    </script>
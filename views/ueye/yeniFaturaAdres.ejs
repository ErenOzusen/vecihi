<% layout('layouts/boilerplate') %>

    <div id="TamSayfaCerceveAlani">
        <div id="TamSayfaCerceveSinirlamaAlani">
            <form action="yeniFaturaAdres" method="POST" novalidate class="validated-form">

                <div id="TamSayfaCerceveAlaniIciYuzdeElliSolAlan">
                    <div class="TamSayfaCerceveAlaniİciAltiCizgiliBaslikAlani">
                        <div class="TamSayfaCerceveAlaniİciAltiCizgiliBaslikAlaniUstBaslikMetni">
                            Hesabım > Yeni Fatura Adres Ekleme</div>
                        <div class="TamSayfaCerceveAlaniİciAltiCizgiliBaslikAlaniAltBaslikMetni">
                            Aşağıdan yeni adres ekleyebilirsiniz.</div>
                    </div>


                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">Isim</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani"><input name="faturaAdres[isim]"
                            type="text" class="FormElemanlariTextInputlari" tabindex="1" value="" required>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen izminizi yazın</div>
                    </div>


                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">Soyisim</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani"><input name="faturaAdres[soyisim]"
                            type="text" class="FormElemanlariTextInputlari" tabindex="2" value="" required>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen soyizminizi yazın</div>
                    </div>

                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">TC kimlik no.</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani"><input name="faturaAdres[tc]"
                            type="text" class="FormElemanlariTextInputlari" tabindex="3" value="" required>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen tc kimlik no. yazın</div>
                    </div>

                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">Ülke</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani">
                        <select name="faturaAdres[uelke]" class="UelkeSelect" required>
                            <option class="" value="tuerkiye">Türkiye</option>
                        </select>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen bir tane ülke secin</div>
                    </div>

                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">Sehir</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani"><input name="faturaAdres[sehir]"
                            type="text" class="FormElemanlariTextInputlari" tabindex="4" value="" required>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen sokağınzı yazın</div>
                    </div>

                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">Sokak</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani"><input name="faturaAdres[sokak]"
                            type="text" class="FormElemanlariTextInputlari" tabindex="4" value="" required>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen sokağınzı yazın</div>
                    </div>

                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">Ev numarası</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani"><input
                            name="faturaAdres[evNumarasi]" type="text" class="FormElemanlariTextInputlari" tabindex="5"
                            value="" required>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen ev numaranızı yazın</div>
                    </div>

                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariBaslikMetni">Cep Telefonu</div>
                    <div class="TamSayfaCerceveAlaniIcinFormElemanlariIciSatirAlani"><input
                            name="faturaAdres[ceptelefonu]" type="text" class="FormElemanlariTextInputlari" tabindex="6"
                            value="" required>
                        <div class="valid-feedback">Iyi!</div>
                        <div class="invalid-feedback">Lütfen cep telefonunuzu yazın</div>
                    </div>


                    <div class="ButonlarIcinKapsamaAlani"><input type="submit" value="Adresi Kaydet"
                            class="FormElemanlariYesilButonlar" tabindex="7"></div>
                </div>
            </form>

            <div id="TamSayfaCerceveAlaniIciYuzdeElliSagAlan">
                <div class="TamSayfaCerceveAlaniİciAltiCizgiliBaslikAlani">
                    <div class="TamSayfaCerceveAlaniİciAltiCizgiliBaslikAlaniUstBaslikMetni">
                        Reklam
                    </div>
                    <div class="TamSayfaCerceveAlaniİciAltiCizgiliBaslikAlaniAltBaslikMetni">
                        vecihistore.com reklamları.
                    </div>
                </div>

                <div class="TamSayfaCerceveAlaniIciReklamKapsamaAlani">
                    <div class="TamSayfaCerceveAlaniIciReklamResmiAlani">
                        <!-- 552x475 -->
                        <img src="/images/reklam-comics.png" alt="" title="">
                    </div>
                </div>

            </div>
        </div>
    </div>
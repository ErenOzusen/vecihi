<% layout('layouts/boilerplate') %>
    <div id="TamSayfaAlani">
        <div id="TamSayfaSinirlamaAlani">
            <div id="TamSayfaSagSutunSinirlamaAlani mr-5">
                <div class="YeniÜrünEkle">

                    <div class="displayÜrün d-flex justify-content-center">

                        <form action="/<%=ueruen._id%>/yorumYaz" method="POST" novalidate class="validated-form"
                            style="width: 70%; display: block" enctype="multipart/form-data">
                            <div class="d-flex justify-content-center">
                                <fieldset class="mb-5 starability-growRotate">
                                    <legend>Rating:</legend>
                                    <input type="radio" id="no-rate" class="input-no-rate" name="rating[stars]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="rating[stars]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="rating[stars]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="rating[stars]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="rating[stars]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="rating[stars]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>

                            <div class="mb-5 d-flex justify-content-center">
                                <label class="mb-1" for="resim">Ürün resimi yükle</label>
                                <input id="resim" type="file" name="image" class="form-control" multiple required>
                            </div>

                            <div class="secenek mb-2 d-flex justify-content-center">
                                <div class="col-2 d-flex align-items-center"><label for="tarif">Yorum yaz</label></div>
                                <div class="col-10">
                                    <textarea class="form-control ml-4" id="tarif" style="width: 100%; height: 100px"
                                        name="rating[yorum]" type="String" tabindex="1"></textarea>
                                </div>
                            </div>

                            <div class="ButonlarIcinKapsamaAlani d-flex justify-content-center"><input type="submit"
                                    value="Yorum yaz" class="FormElemanlariYesilButonlar" tabindex="3"
                                    id="submitButton"></div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
<% layout('layouts/boilerplate') %>
    <div id="TamSayfaAlani">
        <div id="TamSayfaSinirlamaAlani">
            <div id="TamSayfaSolSutunSinirlamaAlani">
                <div id="TamSayfaSolSutunIcMenuAlani">
                    <div id="TamSayfaSolSutunIcMenuAlaniUstMenuBasligi">
                        <% let ueruenler="" %>
                            <% if(typeof erkekUeruenler !=='undefined' ) { %>
                                <% ueruenler=erkekUeruenler%>
                                    <% ueruenRoute='erkekGiyim' ; %>
                                        <p>Erkek Giyim</p>
                                        <span href="/erkekGiyim" target="_top">Tüm Ürünler
                                            (<%=erkekUeruenler.length %>)
                                        </span>
                                        <% } else if(typeof kadinUeruenler !=='undefined' ) { %>
                                            <% ueruenler=kadinUeruenler;%>
                                                <% ueruenRoute='kadinGiyim' ; %>
                                                    <p>Kadin Giyim</p>
                                                    <span href="/kadinGiyim" target="_top">Tüm Ürünler
                                                        (<%=kadinUeruenler.length %>)
                                                    </span>
                                                    <% } else if(typeof vintageUeruenler !=='undefined' ) { %>
                                                        <% ueruenler=vintageUeruenler;%>
                                                            <% ueruenRoute='vintage' ; %>
                                                                <p>Vintage Ürünler</p>
                                                                <span href="/kadinGiyim" target="_top">Tüm Ürünler
                                                                    (<%=vintageUeruenler.length %>)
                                                                </span>%>
                                                                <% } %>
                    </div>
                    <div id="TamSayfaSolSutunIcMenuAlaniAltKategoriOkuVeMenuBasligi">

                    </div>
                    <% if(typeof vintageUeruenler !=='undefined' ) {%>
                        <%- include('../partials/kategori2')%>
                            <% } else if (typeof erkekUeruenler !=='undefined' || typeof kadinUeruenler !=='undefined'
                                ){%>
                                <%- include('../partials/kategori')%>
                                    <% } %>

                                        <div id="TamSayfaSagSutunSinirlamaAlani">

                                            <div id="TamSayfaSagSutunIciUrunlerAlani">
                                                <div id="TamSayfaSagSutunIciUrunlerDengelemeAlani">
                                                    <% for(let ueruen of ueruenler) {%>
                                                        <% if(ueruen.kategori &&
                                                            ueruen.kategori.toString()==='unisexGiyim' ) { %>
                                                            <%ueruenRoute= 'unisexGiyim' %>
                                                                <% } %>
                                                                    <div class="TamSayfaSagSutunIciUrunSinirlamaAlani">
                                                                        <div
                                                                            class="TamSayfaSagSutunIciUrunResmiDısCercevesi">
                                                                            <a
                                                                                href="/<%=ueruenRoute %>/<%=ueruen._id%>/detay"><img
                                                                                    src="<%=ueruen.images[0].url%>"
                                                                                    alt="" title=""></a>
                                                                        </div>

                                                                        <div
                                                                            class="TamSayfaSagSutunIciUrunUstBaslikMetni">
                                                                            <% if(ueruen.kategori=='erkekGiyim' ) {%>
                                                                                Erkek Giyim
                                                                                <% } else if
                                                                                    (ueruen.kategori='kadinGiyim' ) {%>
                                                                                    Kadin Giyim
                                                                                    <% } %>
                                                                        </div>

                                                                        <div
                                                                            class="TamSayfaSagSutunIciUrunAltBaslikMetni">

                                                                            <%= ueruen.tarif%>
                                                                        </div>

                                                                        <div
                                                                            class="TamSayfaSagSutunIciUrunPuanYildizlariAlani">

                                                                            <img src="/images/star-1.png" alt=""
                                                                                title="">

                                                                        </div>

                                                                        <div
                                                                            class="TamSayfaSagSutunIciUrunFiyatlariAlani mb-1">


                                                                            <span
                                                                                class="TamSayfaSagSutunIciUrunAltBaslikMetni">

                                                                                <%=ueruen.fiyat%> TL

                                                                            </span>

                                                                        </div>


                                                                    </div>
                                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>

                </div>
            </div>
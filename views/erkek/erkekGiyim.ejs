<% layout('layouts/boilerplate') %>
    <div id="TamSayfaAlani">
        <div id="TamSayfaSinirlamaAlani">
            <div id="TamSayfaSolSutunSinirlamaAlani">
                <div id="TamSayfaSolSutunIcMenuAlani">
                    <div id="TamSayfaSolSutunIcMenuAlaniUstMenuBasligi">
                        <% const erkekGiyimUeruenler=ueruenler.filter((ueruen)=> ueruen.kategori === 'erkekGiyim');
                            %>
                            <p>Erkek Giyim</p>
                            <span href="/erkekGiyim" target="_top">Tüm Ürünler
                                (<%=erkekGiyimUeruenler.length %>)
                            </span>
                    </div>
                    <div id="TamSayfaSolSutunIcMenuAlaniAltKategoriOkuVeMenuBasligi">

                    </div>
                    <%- include('../partials/kategori')%>

                        <div id="TamSayfaSagSutunSinirlamaAlani">
                            <div id="TamSayfaSagSutunIciAramaAlani">
                                <form action="/erkekGiyim" method="post">
                                    <div class="TamSayfaSagSutunIciAramaAlaniButonlarIcinKapsamaAlani"><input
                                            type="submit" value=""
                                            class="TamSayfaSagSutunIciAramaAlaniAramayapButonlari"> </div>
                                    <div class="TamSayfaSagSutunIciAramaAlaniInputAlanlariKapsamaAlani"><input
                                            type="text" name="Arama" class="TamSayfaSagSutunIciAramaAlaniTextInputlari">
                                    </div>
                                </form>
                            </div>

                            <div id="TamSayfaSagSutunIciUrunlerAlani">
                                <div id="TamSayfaSagSutunIciUrunlerDengelemeAlani">
                                    <% for(let ueruen of ueruenler) {%>
                                        <% if(ueruen.kategori=='erkekGiyim' ) {%>
                                            <div class="TamSayfaSagSutunIciUrunSinirlamaAlani">
                                                <div class="TamSayfaSagSutunIciUrunResmiDısCercevesi">
                                                    <a href="/erkekGiyim/<%=ueruen._id%>/detay"><img
                                                            src="<%=ueruen.images[0].url%>" alt="" title=""></a>
                                                </div>

                                                <div class="TamSayfaSagSutunIciUrunUstBaslikMetni">
                                                    Erkek Giyim
                                                </div>

                                                <div class="TamSayfaSagSutunIciUrunAltBaslikMetni">

                                                    <%= ueruen.tarif%>
                                                </div>

                                                <div class="TamSayfaSagSutunIciUrunPuanYildizlariAlani">

                                                    <img src="/images/star-1.png" alt="" title="">

                                                </div>

                                                <div class="TamSayfaSagSutunIciUrunFiyatlariAlani mb-1">


                                                    <span class="TamSayfaSagSutunIciUrunAltBaslikMetni">

                                                        <%=ueruen.fiyat%> TL

                                                    </span>

                                                </div>


                                            </div>
                                            <% } %>
                                                <% } %>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
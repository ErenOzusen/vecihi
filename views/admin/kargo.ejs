<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">

            <div id="" class="col-md-6">


                <div class="YeniÜrünEkle">

                    <div class="displayÜrün">

                        <form action="/admin/kargo" method="POST" novalidate class="validated-form" style="width: 70%"
                            enctype="multipart/form-data">

                            <div class="mb-5">
                                <label class="mb-1" for="resim">Kargo Logo yükle</label>
                                <input id="resim" type="file" name="image" class="form-control" required>
                                <div class="valid-feedback">Iyi!</div>
                                <div class="invalid-feedback">Lütfen kargo logo resmini yükleyiniz</div>
                            </div>

                            <div class="secenek mb-2" style="display: flex; align-items: center;">
                                <label style="width: 40%" for="tarif">Kargo isim</label>
                                <textarea class="form-control ml-4" id="tarif" style="width: 100%; height: 50px"
                                    name="yeniKargo[isim]" type="String" tabindex="1" required></textarea>
                                <div class="valid-feedback">Iyi!</div>
                                <div class="invalid-feedback">Lütfen kargo ismini yazinis</div>
                            </div>

                            <div class="secenek">
                                <img src="/images/lira.png" alt="">
                                <input type="text" name="yeniKargo[uecret]" id="currency-field" value=""
                                    data-type="currency" placeholder="25,50 TL" required>
                                <div class="valid-feedback">Iyi!</div>
                                <div class="invalid-feedback">Lütfen kargo ücretini yaziniz</div>
                            </div>

                            <div class="ButonlarIcinKapsamaAlani"><input type="submit" value="Kargo yenilesdir"
                                    class="FormElemanlariYesilButonlar" tabindex="3" id="submitButton"></div>
                        </form>
                    </div>
                </div>

            </div>

            <div id="" class="col-md-6">
                <div class="YeniÜrünEkle">
                    <span>Su an ekli olan Kargo</span>
                    <div class="TamSayfaCerceveAlaniIciKargoFirmasiSinirlamaAlani">
                        <div class="TamSayfaCerceveAlaniIciKargoFirmasiLogosuaAlani">
                            <img src="<%=kargo[0].image.url%>" alt="" title="">
                        </div>
                        <div class="TamSayfaCerceveAlaniIciKargoFirmasiTabloAlani">
                            <table class="TamSayfaCerceveAlaniIciKargoFirmasiTablosu" width="100%" cellpadding="0"
                                cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td align="left" valign="top"
                                            class="TamSayfaCerceveAlaniIciKargoFirmasiTablosuBaslikVeFiyatmetniSutunu">
                                            <%=kargo[0].isim %>
                                                <%=kargo[0].uecret %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>